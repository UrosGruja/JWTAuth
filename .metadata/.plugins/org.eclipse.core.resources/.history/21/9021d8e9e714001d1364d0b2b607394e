/*
 * package com.example.demo.security;
 * 
 * import org.springframework.beans.factory.annotation.Autowired; import
 * org.springframework.stereotype.Service; import
 * org.springframework.web.bind.annotation.PostMapping; import
 * org.springframework.web.bind.annotation.RequestBody;
 * 
 * import com.example.demo.repositories.UserRepository;
 * 
 * import model.User;
 * 
 * @Service public class DetailUserService implements UserDetailsService{
 * 
 * @Autowired UserRepository uRep;
 * 
 * 
 * public UserDetails loadUserByUsername(@RequestBody User user) {
 * uRep.findByUserName(user.getName()); return user.getEmail(); }
 * 
 * }
 */